{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"newProjectRoot": "projects",
	"projects": {
		"searchable-select": {
			"projectType": "library",
			"root": "projects/searchable-select",
			"sourceRoot": "projects/searchable-select/src",
			"architect": {
				"build": {
					"builder": "@angular-devkit/build-ng-packagr:build",
					"options": {
						"tsConfig": "projects/searchable-select/tsconfig.lib.json",
						"project": "projects/searchable-select/ng-package.json"
					}
				},
				"lint": {
					"builder": "@angular-devkit/build-angular:tslint",
					"options": {
						"tsConfig": [
							"projects/searchable-select/tsconfig.lib.json",
							"projects/searchable-select/tsconfig.spec.json"
						],
						"exclude": [
							"**/node_modules/**"
						]
					}
				}
			}
		}
	},
	"defaultProject": "my-lib"
}
